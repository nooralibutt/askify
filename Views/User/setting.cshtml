@model Askify.Models.User
@{
    ViewBag.Title = "Setting | Askify";   
}

<div class="top_mrgn">
	<div class="page-header">
      <h1>Setting <small>@Model.first_name</small></h1>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <div class="well">
            <div class="row">
                <div class="col-md-4 pull-left uper_txt">Want to quit Askify?</div>
                <div class="col-md-4 pull-right"><a href="~/user/delete/@Model.Id" class="btn btn-warning btn-lg pull-right" >Delete Account</a></div>
            </div>   
        </div>
    </div>
    <div class="col-xs-4 col-md-2">
        <hr />
        <div class="form-group">
            @{
                  if(@Model.image == null)
                  {
                    <img class="thumbnail" src="~/Files/no-user.png" />
                  }
                  else
                  {
                    <img class="thumbnail" src="~/Files/@Model.image" />
                  }
              }
        </div> 
    </div>
    <div class="col-md-6">
        <form action="~/User/update/@Model.Id" method="post" class="form-horizontal" role="form" autocomplete="off" enctype="multipart/form-data">
          <hr />
          <div class="form-group">
            <div class="col-sm-12">
                @Html.TextBoxFor(m=>m.first_name, new { @placeholder="First Name" ,@class = "form-control" })
                @Html.ValidationMessageFor(m=>m.first_name)
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-12">
                @Html.TextBoxFor(m=>m.last_name, new { @placeholder="Last Name" ,@class = "form-control" })
                @Html.ValidationMessageFor(m=>m.last_name)
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-12">
                @Html.Password("password_update", null, new { @placeholder="New Password", @class = "form-control" })
            </div>
          </div>
            <hr />
          <div class="form-group">
            <div class="col-sm-12">
                @Html.PasswordFor(m=>m.password, new { @placeholder="Current Password" ,@class = "form-control" })
                @Html.ValidationMessageFor(m=>m.password)
            </div>
          </div>
            <hr />
          <div class="form-group">
            <div class="col-sm-12">
              Upload Image: <input type="file" name="image" />
            </div>
          </div>
            <hr />
          <div class="form-group">
            <div class="col-sm-12">
              <button type="submit" class="btn btn-warning">Save Changes</button>
            </div>
          </div>
            <hr />
        </form>
    </div>
    <div class="col-md-4">
        <hr />
        <div class="panel-group" id="accordion">
            <div class="panel panel-default">
                <div class="panel-heading">
                  <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
                      Askify Status
                    </a>
                  </h4>
                </div>
                <div id="collapseOne" class="panel-collapse collapse in">
                  <div class="panel-body">
                      <address>
                            <strong>@Model.first_name @Model.last_name</strong><br>
                            Question Posted: @Model.Questions.Count<br>
                            Answers: @Model.Answers.Count<br>
                        </address>
                  </div>
                </div>
            </div>
        </div>
    </div>
</div>
